<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Headers"
           parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/header_2</item>
    </style>

    <style name="Headers.header_1">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="Headers.header_2">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="normal"
           parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppActionBar"
           parent="Theme.AppCompat.DayNight">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="AppToolBar"
           parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppToolBar.TitleTextStyle</item>
    </style>

    <style name="AppToolBar.TitleTextStyle">
        <item name="fontFamily">@font/normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/normal</item>
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:disabledAlpha">0.1</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AppButton.Secondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTint">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectFile_text_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/normal</item>
    </style>

</resources>