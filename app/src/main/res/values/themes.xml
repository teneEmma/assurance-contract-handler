<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.AssuranceContractHandler" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorAccent">@color/light_green</item>

        <item name="colorSecondary">@color/green</item>

        <!-- The background color of activities -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Action bar style. -->
        <item name="android:actionBarStyle" >@style/AppActionBar</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AssuranceContractHandler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_profile">
        <item name="iconPadding"> 0dp </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_round_dialog</item>
    </style>

    <style name="btn_negative_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="background">@drawable/btn_round</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_positive_style" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/btn_round</item>
<!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_heading" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#0E4598</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>