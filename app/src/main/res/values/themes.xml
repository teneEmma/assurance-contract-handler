<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.AssuranceContractHandler" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorAccent">@color/light_green</item>

        <item name="colorSecondary">@color/green</item>

        <item name="android:textColor">@color/green</item>

        <!--  The text color for the toolbar title  -->
        <item name="titleTextColor">@color/white</item>

        <!-- The background color of activities -->
        <item name="android:windowBackground">@color/light_green</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Action bar style. -->
        <item name="android:actionBarStyle" >@style/AppActionBar</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>