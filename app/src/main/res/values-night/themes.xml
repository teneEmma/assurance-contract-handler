<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.AssuranceContractHandler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorAccent">@color/light_green</item>

        <!--  The color for the action bar.  -->
        <item name="colorSecondary">@color/black</item>

        <item name="android:textColor">@color/light_green</item>

        <!--  The text color for the toolbar title  -->
        <item name="titleTextColor">@color/light_green</item>

        <!-- The background color of activities -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Action bar style. -->
        <item name="android:actionBarStyle" >@style/AppActionBar</item>

        <!--  For bottom sheet  -->
        <item name="bottomSheetDialogTheme">@style/AppTheme.AssuranceContractHandler.BottomSheetStyle</item>

        <item name="chipGroupStyle">@style/AppTheme.AssuranceContractHandler.ChipGroupStyle</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="enforceTextAppearance">false</item>
        <item name="tabTextAppearance">@style/normal</item>
        <item name="tabTextColor">?attr/titleTextColor</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabRippleColor">?attr/colorAccent</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.BottomSheetStyle"
           parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.AssuranceContractHandler.BottomSheetStyle.AppModalStyle</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.BottomSheetStyle.AppModalStyle"
           parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_sheet_round</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.ChipGroupStyle"
           parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="tabTextAppearance">@style/Headers.header_2</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AssuranceContractHandler.ChipGroupStyle.Action"
           parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipSurfaceColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="tabTextAppearance">@style/Headers.header_2</item>
        <item name="android:textSize">29sp</item>
    </style>

</resources>