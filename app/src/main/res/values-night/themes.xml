<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.AssuranceContractHandler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorAccent">@color/light_green</item>

        <!--  The color for the action bar.  -->
        <item name="colorSecondary">@color/black</item>

        <item name="android:textColor">@color/light_green</item>

        <!--  The text color for the toolbar title  -->
        <item name="titleTextColor">@color/light_green</item>

        <!-- The background color of activities -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Action bar style. -->
        <item name="android:actionBarStyle" >@style/AppActionBar</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="enforceTextAppearance">false</item>
        <item name="tabTextAppearance">@style/normal</item>
        <item name="tabTextColor">?attr/titleTextColor</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">?attr/colorAccent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
    </style>

</resources>