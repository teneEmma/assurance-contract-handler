<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.AssuranceContractHandler" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorAccent">@color/light_green</item>

        <!--  The color for the action bar.  -->
        <item name="colorSecondary">@color/black</item>

        <!-- The background color of activities -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Action bar style. -->
        <item name="android:actionBarStyle" >@style/AppActionBar</item>
    </style>


    <style name="text_profile">
        <item name="iconPadding"> 0dp </item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="btn_negative_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="background">@drawable/btn_round</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_positive_style" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/btn_round</item>
<!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_heading" >
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>