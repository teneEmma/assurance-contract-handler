<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="4dp"
    android:background="@drawable/dialog_round">

        <HorizontalScrollView
            android:id="@+id/horizontal_sv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup_filter"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    app:checkedChip="@id/attestationChip_filter"
                    android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/attestationChip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attestation"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/nPolicechip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NÂ° Police"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/assureChip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assure"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/compagnieChip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compagnie"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/immatriculationChip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Immatriculation"/>


                        <com.google.android.material.chip.Chip
                            android:id="@+id/apporteurChip_filter"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apporteur"/>

                </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_filtrerAppoteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_sv_filter"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            app:hintTextColor="@color/purple_500"
            android:hint="@string/filtrer_nom_de_l_apporteur"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_filtrerApporteur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_filtrerImmatriculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_filtrerAppoteur"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            app:hintTextColor="@color/purple_500"
            android:hint="@string/n_d_immatriculation"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_filtrerimmatriculation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:id="@+id/layout_attestationCarte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/il_filtrerImmatriculation">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/il_filtrerAttestation"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/purple_500"
                    android:hint="@string/n_attestation"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_filtrerAttestation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/il_filtrerCarteRose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/il_filtrerAttestation"
                    android:layout_toStartOf="@id/btn_date_picker"
                    android:padding="5dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/purple_500"
                    android:hint="@string/carte_rose"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_filtrerCarteRose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="edit"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/calendrier"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/white"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_prix_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layout_attestationCarte">

                <TextView
                    android:id="@+id/et_title_prix_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/il_filtrerAttestation"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="@string/prix"/>

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/prix_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:valueFrom="1000"
                    android:valueTo="500000"
                    android:stepSize="1000"
                    app:values="@array/price_range"
                    android:contentDescription="@string/prix"/>

                <LinearLayout
                    android:id="@+id/ll_et_price_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/et_price_range_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prix_min"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:text="@string/prixSeperator"/>

                        <TextView
                            android:id="@+id/et_price_range_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/prix_max"/>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_puissance_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/layout_prix_range">

                <TextView
                    android:id="@+id/et_title_puissance_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/prix"/>

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/puissance_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:valueFrom="1"
                    android:valueTo="30"
                    android:stepSize="1"
                    app:values="@array/puissance_range"
                    android:contentDescription="string"/>

                <LinearLayout
                    android:id="@+id/ll_et_puissance_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/et_puissance_range_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/puissance_min"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:text="@string/prixSeperator"/>

                        <TextView
                            android:id="@+id/et_puissance_range_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/puissance_max"/>

                </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_puissance_range"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReset"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_round"
                    android:paddingHorizontal="40dp"
                    android:text="@string/reset"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/outline_cancel_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnAppliquerFiltre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_round"
                    android:text="@string/appliquer"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/baseline_filter_list_24"
                    app:backgroundTint="@color/design_default_color_primary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnReset"
                    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>