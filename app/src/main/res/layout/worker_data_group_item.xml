<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_contract_number_index_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/elevated_zone_indices"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/column_id"
        android:textSize="20sp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/tv_contract_number_worker"
        android:layout_width="wrap_content"
        android:layout_height=  "wrap_content"
        android:background="@drawable/elevated_zone_indices"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_contract_number_index_worker"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:paddingHorizontal="5dp"
        android:text="@string/contract_number"
        android:textSize="20sp"
        android:textStyle="italic|bold"/>

    <LinearLayout
        android:id="@+id/ll_contract_clicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/tv_contract_number_worker"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_some_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/elevated_zone_indices"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            android:text="@string/some_text"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btn_customer_redirection_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/contact_him"/>

    </LinearLayout>

</RelativeLayout>