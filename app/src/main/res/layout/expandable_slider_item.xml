<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/et_title_price_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textAppearance="@style/normal"
            android:textSize="16sp"
            android:text="@string/price_xaf"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/ll_et_price_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/price_slider"
                android:layout_width="match_parent"
                style="@style/AppTheme.AssuranceContractHandler.SliderStyle"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_round"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/price_xaf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_price_range_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/normal"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textAppearance="@style/normal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="@string/price_separator"/>

                <TextView
                    android:id="@+id/et_price_range_max"
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/normal"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>