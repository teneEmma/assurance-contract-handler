<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:id="@+id/nameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/dates">

        <TextView
            android:id="@+id/column_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/column_id"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/column_assure"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/column_assure"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grandTotal"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/nameNumber"
        android:layout_alignBottom="@id/nameNumber"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/title_effet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="11sp"
            android:text="@string/effet_title"
            android:textColor="@color/bright_green"/>

        <TextView
            android:id="@+id/column_effet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/column_effet"
            android:textColor="@color/bright_green"/>

        <TextView
            android:id="@+id/title_echeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="@string/echeance_title"
            android:textColor="@color/echeance_header"/>

        <TextView
            android:id="@+id/column_echeance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:text="@string/column_echeance"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attestationCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:orientation="horizontal"
        android:layout_below="@id/nameNumber">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_attestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/contract_item_header"
                android:textSize="11sp"
                android:text="@string/immatriculation_title"/>

            <TextView
                android:id="@+id/column_immatriculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic|bold"
                android:text="@string/immatriculation_value"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_carteRose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/contract_item_header"
                android:textSize="11sp"
                android:text="@string/carte_rose_title" />

            <TextView
                android:id="@+id/column_carteRose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic|bold"
                android:text="@string/column_carteRose" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>